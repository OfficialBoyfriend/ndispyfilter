[Version]
; --------------------------------------------------------------------------------
Signature = "$Windows NT$"
Class = Net
ClassGUID = {4d36e972-e325-11ce-bfc1-08002be10318}
Provider = %LiamKirton%
DriverVer = 07/03/2007,0.1.1.0

; --------------------------------------------------------------------------------
[ControlFlags]
; --------------------------------------------------------------------------------

ExcludeFromSelect = NdisPyFilterMiniport

; --------------------------------------------------------------------------------
[DestinationDirs]
; --------------------------------------------------------------------------------

DefaultDestDir=12

; --------------------------------------------------------------------------------
[Manufacturer]
; --------------------------------------------------------------------------------

%LiamKirton% = LiamKirton

; --------------------------------------------------------------------------------
[LiamKirton]
; --------------------------------------------------------------------------------

%NdisPyFilterMiniport_Desc% = NdisPyFilterMiniport.ndi, NdisPyFilterMiniport

; --------------------------------------------------------------------------------
[NdisPyFilterMiniport.ndi]
; --------------------------------------------------------------------------------

AddReg = NdisPyFilterMiniport.ndi.AddReg
Characteristics = 0x29 ; NCF_NOT_USER_REMOVABLE | NCF_VIRTUAL | NCF_HIDDEN

; --------------------------------------------------------------------------------
[NdisPyFilterMiniport.ndi.AddReg]
; --------------------------------------------------------------------------------

HKR, Ndi, Service, 0, NdisPyFilterMiniport

; --------------------------------------------------------------------------------
[NdisPyFilterMiniport.ndi.Services]
; --------------------------------------------------------------------------------

AddService = NdisPyFilterMiniport, 0x2, NdisPyFilterMiniport.AddService

; --------------------------------------------------------------------------------
[NdisPyFilterMiniport.AddService]
; --------------------------------------------------------------------------------

ServiceType = 1 ; SERVICE_KERNEL_DRIVER
StartType = 3 ; SERVICE_DEMAND_START
ErrorControl = 1 ;SERVICE_ERROR_NORMAL
ServiceBinary = %12%\NdisPyFilter.sys
AddReg = NdisPyFilterMiniport.AddService.AddReg

; --------------------------------------------------------------------------------
[NdisPyFilterMiniport.AddService.AddReg]
; --------------------------------------------------------------------------------

; --------------------------------------------------------------------------------
[Strings]
; --------------------------------------------------------------------------------

LiamKirton = "Liam Kirton"
NdisPyFilterMiniport_Desc = "NdisPyFilter Miniport"

